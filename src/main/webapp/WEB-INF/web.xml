<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <display-name>Conference</display-name>

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.epam.conference.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.epam.conference.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>conferences</servlet-name>
        <servlet-class>com.epam.conference.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>requests</servlet-name>
        <servlet-class>com.epam.conference.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>conference-creation</servlet-name>
        <servlet-class>com.epam.conference.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>section-creation</servlet-name>
        <servlet-class>com.epam.conference.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.epam.conference.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sections</servlet-name>
        <servlet-class>com.epam.conference.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>conferences</servlet-name>
        <url-pattern>/conferences</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>requests</servlet-name>
        <url-pattern>/requests</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>conference-creation</servlet-name>
        <url-pattern>/conference-creation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>section-creation</servlet-name>
        <url-pattern>/section-creation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sections</servlet-name>
        <url-pattern>/sections</url-pattern>
    </servlet-mapping>

</web-app>

